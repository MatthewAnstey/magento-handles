<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <MatthewAnstey_DebugHandles>
            <version>0.0.1</version>
        </MatthewAnstey_DebugHandles>
    </modules>
    <global>
        <blocks>
            <matthewanstey_debughandles>
                <class>MatthewAnstey_DebugHandles_Block</class>
            </matthewanstey_debughandles>
        </blocks>
    </global>  
    <frontend>  
        <layout>
            <updates>
                <matthewanstey_debughandles>
                    <file>matthewanstey_debughandles.xml</file>
                </matthewanstey_debughandles>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <matthewanstey>
                                            <title>Matthew Anstey - All</title>
                                        </matthewanstey>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>